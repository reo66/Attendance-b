<% provide(:title, 'edit_basic_info') %>
<h1>基本情報の更新</h1>

 <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user,local: true, method: :patch) do |f| %>
      <%= render 'shared/error_messages', object: @user %>
      
      <%= f.label :work_time, class: "label-basic_time" %>
      <%= f.time_field :basic_time, class: "form-control" %>
      
      <%= f.label :work_time, class: "label-label-work_time" %>
      <%= f.time_field :work_time, class: "form-control" %>
      
      <%= f.submit "編集",class: "btn btn-primary btn-block btn-signup" %>
      
    <% end %>
  </div>
</div>