  <table class="table table-bordered table-condensd table-hover" id="table-attendances">
    <thead>
      <tr>
        <th  rowspan="2">日付</th>
        <th rowspan="2">曜日</th>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2",align="left">備考</th>
      </tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% (@first_day..@last_day).each do |day| %>
      <tr>
         <td><%= l(day, format: :short) %></td>
          <td><%= $days_of_the_week[day.wday] %></td>
          <td></td>
          <td></td>
