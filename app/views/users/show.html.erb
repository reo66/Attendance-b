<%= provide(:title,@user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "◀︎" ,user_path(date:@first_day.prev_month), class: "btn btn-primary" %>
        &nbsp;&nbsp;
        <%=l(@first_day, format: :middle) %>&nbsp;&nbsp;時間管理表
        &nbsp;&nbsp;
        <%= link_to "▶︎",user_path(date: @first_day.next_month), class: "btn btn-primary" %>
      </td>
      <td>指定勤務時間:<%= format_basic_info(@user.work_time) %></td>
      <td colspan="3">基本時間:<%= format_basic_info(@user.basic_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>
    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
       <td>コード</td>
       <td></td>
      <td>出勤日数:<%= @worked_sum %>日</td>
      <td>締め: <%= l(@last_day,format: :short)%></td>
    </tr>
  </table>
</div>
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
<div>
  <table class="table table-bordered table-condensd table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="2">日付</th>
        <th rowspan="2">曜日</th>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="line">
      <% @attendances.each do |day| %>
      <% css_class = 
    case $days_of_the_week[day.worked_on.wday]
        when '土'
          'text-primary'
        when '日'
          'text-danger'
        end
      %>
      <tr>
         <td><%= l(day.worked_on, format: :short) %></td>
          <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= l(day.started_at,format: :hour) if day.started_at.present? %></td>
           <td><%= l(day.started_at,format: :min) if day.started_at.present? %></td>
          <td> <!--繰り返し処理で表示している時間と本日が同じかつ出勤時間が空だったら、出勤ボタンを表示-->
            <% if btn_text = attendance_state(day) %>
             <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at, format: :min) if day.finished_at.present? %></td>
          <td></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
            <%= working_times(day.started_at, day.finished_at) %>
            <% end %>
          </td>
          <td></td>
      </tr>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>